@model ShopTARgv23.Models.AccuWeathers.AccuWeatherSearchViewModel

<h1>Search city</h1>

<div class="container">
    <form method="post">
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <h2>Search the forecast in a city</h2>
                <label asp-for="CityName" style="font-family: Arial"></label>
                <input asp-for="CityName" class="form-control" />
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>
        </div>
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <button asp-controller="AccuWeathers" asp-action="searchCity" class="btn btn-pri">Search</button>
            </div>
        </div>
    </form>

</div>